@{
    ViewData["Title"] = "API Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <h2 class="mb-4">🌐 API Dashboard</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- DIGIPIN API Card -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">DIGIPIN Generator</h5>
                    <p class="card-text">Convert latitude and longitude into a 10-digit DIGIPIN.</p>
                    <a href="@Url.Action("DigiPin", "Home")" class="btn btn-primary">Know Your DIGIPIN</a>
                </div>
            </div>
        </div>

        <!-- Future APIs (Example) -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Another API</h5>
                    <p class="card-text">Details for a future or existing API.</p>
                    <a href="#" class="btn btn-secondary disabled">Coming Soon</a>
                </div>
            </div>
        </div>

        <!-- Add more API cards here -->
    </div>
</div>
